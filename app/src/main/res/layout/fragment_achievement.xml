<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.FragmentAchievement">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/green2"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Achievements"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserratbold"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:id="@+id/txtusername"
                        android:textColor="@color/white"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/image"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserratblack"
                        android:textSize="20dp"/>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/circle_green2"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:padding="50dp"
                        android:id="@+id/image"
                        android:layout_marginBottom="-28dp"
                        android:layout_marginRight="-28dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/profile"
                            app:tint="@color/white" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="270dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:padding="10dp"
                    android:id="@+id/balance"
                    android:background="@drawable/green_btn_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserratbold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserratbold"
                        android:text="N0"
                        android:id="@+id/txtbalance"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/balance"
                    android:background="@drawable/red_btn"
                    android:backgroundTint="#F34814"
                    android:id="@+id/lin1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/tractor1"
                                app:tint="@color/white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ward Analysis"
                                android:textSize="12dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratmedium"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total No of farms verified today:"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserratbold"
                            android:layout_marginTop="10dp"
                            android:textSize="10dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserratbold"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin1"
                    android:id="@+id/card1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/green_btn_2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/tractor1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ward Analysis"
                                android:textSize="10dp"
                                android:id="@+id/wardname"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratmedium"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total\nNo of Wards Covered"
                                android:textSize="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratbolditalic"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20dp"
                                android:layout_marginTop="10dp"
                                android:id="@+id/wardsverified"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratblack"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/green_btn_2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/tractor1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Farm Analysis"
                                android:textSize="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratmedium"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total\nNo of Farms Verified"
                                android:textSize="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratbolditalic"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20dp"
                                android:id="@+id/farmsverified"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratblack"/>

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp">
                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/green_btn_2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/tractor1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Farm Analysis"
                                android:textSize="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratmedium"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total\nNo of Farmes Requested"
                                android:textSize="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratbolditalic"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratblack"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/green_btn_2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/tractor1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Farm Analysis"
                                android:textSize="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratmedium"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total\nNo of Farms Unavailable"
                                android:textSize="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratbolditalic"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserratblack"/>

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>





</RelativeLayout>
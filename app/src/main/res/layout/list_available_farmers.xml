<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                android:layout_marginRight="10dp"
                android:id="@+id/userimg"
                app:civ_border_color="#d0d0d0"
                app:civ_border_width="0.2dp"
                app:civ_border_overlay="true"
                app:civ_circle_background_color="#ffffff"
                app:tint="#1B3C26" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surname Firstname"
                android:textSize="15dp"
                android:id="@+id/name"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#000"
                android:fontFamily="@font/montserratbold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAFEP Num: SAR123432"
                android:textSize="15dp"
                android:id="@+id/tafepnum"
                android:textColor="#000"
                android:fontFamily="@font/montserratitalic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08134574839"
                android:textSize="15dp"
                android:id="@+id/phoneNumber"
                android:textColor="#000"
                android:fontFamily="@font/montserratregular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: Fadawa quarters genbu"
                android:textSize="15dp"
                android:id="@+id/address"
                android:textColor="#000"
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="@font/montserratregular"/>


        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Fragment.FragmentVerifyFarm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lin1"
        android:visibility="visible">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_3"
            android:paddingBottom="40dp"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/bottom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verification"
                android:textColor="@color/black"
                android:fontFamily="@font/montserratbold"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Location: "
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserratbold"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/pin"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jalingo LGA"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserratbold"
                    android:textSize="15dp"
                    android:id="@+id/lga"
                    android:layout_gravity="center"
                    android:gravity="center"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="20dp"
            android:id="@+id/bottom"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="70dp">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ward"
                    android:background="@drawable/edt_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Ward"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/montserratmedium"
                    android:textColor="#363636"/>

            </RelativeLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/green_btn_2"
                android:text="Continue"
                android:textSize="20dp"
                android:id="@+id/continue1"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserratbold"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/lin2"
        android:visibility="gone">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back1"
            android:src="@drawable/ic_back"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer's Record"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/montserratbold"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:layout_marginRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:fontFamily="@font/montserratbold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="#fff"
                            android:textSize="6dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/circle_green"
                            android:fontFamily="@font/montserratbold"
                            />

                    </LinearLayout>


                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have received the farmer's records. Please proceed to contact the farmer and indicate their availability by selecting either 'available' or 'unavailable'. In the event that you are unable to reach the farmer, please call the provided emergency contact number."
                    android:textColor="#737373"
                    android:textSize="15dp"
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="@font/montserratmedium"
                    android:layout_marginTop="5dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:id="@+id/name"
                        android:editable="false"
                        android:enabled="false"
                        android:clickable="false"
                        android:fontFamily="@font/montserratbold"
                        android:inputType="textCapSentences"
                        android:background="@drawable/edt_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textSize="15dp"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="#363636"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:id="@+id/phone"
                        android:editable="false"
                        android:enabled="false"
                        android:clickable="false"
                        android:fontFamily="@font/montserratbold"
                        android:inputType="number"
                        android:background="@drawable/edt_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="15dp"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="#363636"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:id="@+id/address"
                        android:editable="false"
                        android:enabled="false"
                        android:clickable="false"
                        android:fontFamily="@font/montserratbold"
                        android:inputType="textCapSentences"
                        android:background="@drawable/edt_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farm Address"
                        android:textSize="15dp"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="#363636"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:id="@+id/emergency"
                        android:editable="false"
                        android:enabled="false"
                        android:clickable="false"
                        android:fontFamily="@font/montserratbold"
                        android:inputType="number"
                        android:background="@drawable/edt_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Contact"
                        android:textSize="15dp"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="#363636"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:id="@+id/crops"
                        android:editable="false"
                        android:enabled="false"
                        android:clickable="false"
                        android:fontFamily="@font/montserratbold"
                        android:inputType="textCapSentences"
                        android:background="@drawable/edt_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crops Planted"
                        android:textSize="15dp"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="#363636"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:id="@+id/tafepnum"
                        android:editable="false"
                        android:enabled="false"
                        android:clickable="false"
                        android:fontFamily="@font/montserratbold"
                        android:inputType="number"
                        android:background="@drawable/edt_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TAFEP No"
                        android:textSize="15dp"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="#363636"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp">
                    <View
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/view"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/view"
                        android:background="@drawable/green_btn_2"
                        android:text="Available"
                        android:textSize="15dp"
                        android:id="@+id/available"
                        android:textColor="@color/white"
                        android:textAllCaps="false"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@+id/view"
                        android:background="@drawable/red_btn"
                        android:text="Unavailable"
                        android:textSize="15dp"
                        android:id="@+id/unavailable"
                        android:textColor="@color/white"
                        android:textAllCaps="false"/>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        android:id="@+id/lin3">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back2"
            android:src="@drawable/ic_back"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farm Geo-Location"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/montserratbold"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:layout_marginRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:fontFamily="@font/montserratbold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="#fff"
                            android:textSize="6dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/circle_green"
                            android:fontFamily="@font/montserratbold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="#fff"
                            android:textSize="6dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/circle_green"
                            android:fontFamily="@font/montserratbold"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>


                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please proceed gto capture the geo-location of the farm. Capture four distinct point to accurately define the area for geo-targeting purposes."
                    android:textColor="#737373"
                    android:textSize="15dp"
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="@font/montserratmedium"
                    android:layout_marginTop="5dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/geo1"
                        android:text="Click here to select geo-location"
                        android:textColor="@color/green1"
                        android:gravity="center"
                        android:fontFamily="@font/montserratbold"
                        android:background="@drawable/edt_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Geo Location - 1 "
                        android:textSize="15dp"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="#363636"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/geo2"
                        android:text="Click here to select geo-location"
                        android:textColor="@color/green1"
                        android:gravity="center"
                        android:fontFamily="@font/montserratbold"
                        android:background="@drawable/edt_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Geo Location - 2 "
                        android:textSize="15dp"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="#363636"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/geo3"
                        android:text="Click here to select geo-location"
                        android:textColor="@color/green1"
                        android:gravity="center"
                        android:fontFamily="@font/montserratbold"
                        android:background="@drawable/edt_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Geo Location - 3 "
                        android:textSize="15dp"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="#363636"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/geo4"
                        android:text="Click here to select geo-location"
                        android:textColor="@color/green1"
                        android:gravity="center"
                        android:fontFamily="@font/montserratbold"
                        android:background="@drawable/edt_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Geo Location - 4 "
                        android:textSize="15dp"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="#363636"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D8D8D8"
                        android:layout_margin="23dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/tractor"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentStart="true"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00.0 , 00.0"
                            android:textSize="10dp"
                            android:id="@+id/latlong1"
                            android:textColor="#000"
                            android:fontFamily="@font/montserratlight"/>
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/radar1"
                            android:background="@drawable/circle_red"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00.0 , 00.0"
                            android:textSize="10dp"
                            android:id="@+id/latlong2"
                            android:textColor="#000"
                            android:fontFamily="@font/montserratlight"/>
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/radar2"
                            android:background="@drawable/circle_red"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/radar3"
                            android:background="@drawable/circle_red"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00.0 , 00.0"
                            android:textSize="10dp"
                            android:id="@+id/latlong3"
                            android:textColor="#000"
                            android:fontFamily="@font/montserratlight"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/radar4"
                            android:background="@drawable/circle_red"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00.0 , 00.0"
                            android:textSize="10dp"
                            android:id="@+id/latlong4"
                            android:textColor="#000"
                            android:fontFamily="@font/montserratlight"/>
                    </LinearLayout>



                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/green_btn_2"
                    android:text="Continue"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:id="@+id/gotofarmpics"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserratbold"/>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        android:id="@+id/lin4">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back3"
            android:src="@drawable/ic_back"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farm Pictures"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/montserratbold"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:layout_marginRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:fontFamily="@font/montserratbold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="#fff"
                            android:textSize="6dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/circle_green"
                            android:fontFamily="@font/montserratbold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/loading"
    android:padding="10dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserratbold"
        android:gravity="center"
        android:drawableTop="@drawable/sync"
        android:text="Hi User!"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserratmedium"
        android:gravity="center"
        android:text="You left off somewhere. There is an outstanding farmer record to complete verification"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/farmername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserratmedium"
        android:gravity="center"
        android:text="Farmer name: Jamila Akuabandamwjdlj"
        android:textColor="#000000"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/continued"
            android:text="Continue"
            android:fontFamily="@font/montserratmedium"
            android:textAllCaps="false"
            android:layout_marginRight="5dp"
            android:background="@drawable/green_btn_2"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Ignore"
            android:id="@+id/ignore"
            android:fontFamily="@font/montserratmedium"
            android:textAllCaps="false"
            android:layout_marginLeft="5dp"
            android:background="@drawable/red_btn"/>
    </LinearLayout>


</LinearLayout>